{
  "extends": [
    "next/core-web-vitals",
    "@rocketseat/eslint-config/next"
  ],
  "plugins": [
    "eslint-plugin-import-helpers",
    "tailwindcss"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "camelcase": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@/constants/",
          "/^@/utils/",
          "/^@/functions/",
          "/^@/services/",
          "/^@/providers/",
          "/^@/contexts/",
          "/^@/store/",
          "/^@/modelsApi/",
          "/^@/components/pages/",
          "/^@/components/shared/",
          "/^@/hooks/",
          "/^@/actions/",
          "/^@/middleware/",
          "/^@/assets/",
          "/^@/styles/",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "tailwindcss/classnames-order": "warn",
    "tailwindcss/no-custom-classname": "warn",
    "tailwindcss/no-contradicting-classname": "error"
  }
}