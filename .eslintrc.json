{
  "extends": [
    "next/core-web-vitals",
    "@rocketseat/eslint-config/react",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "camelcase": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@/constants/",
          "/^@/utils/",
          "/^@/functions/",
          "/^@/services/",
          "/^@/providers/",
          "/^@/contexts/",
          "/^@/store/",
          "/^@/components/pages/",
          "/^@/components/shared/",
          "/^@/assets/",
          "/^@/styles/",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "@typescript-eslint/no-explicit-any": [
      "off"
    ]
  }
}
